
server 
{
    listen        7777 ;
    server_name   localhost ;
    error_pages   404.html 405.html ;
    client_body_size  10000000 ;
    root    server_3 ;
    autoindex on ;
    location /kapouet/
    {
		root //tmp/www
        path  ./my-webserv ;
        default_file  default.html ;
        methods    GET DELETE ;
        cgi_bin  /usr/bin/python3 ;
        cgi_extension  .ayac ;
    }
    location /upload/
    {
        default_file  index1.html ;
        methods GET POST DELETE ;
        cgi_extension   .py ;
        cgi_bin  /usr/bin/python3 ;
    }
}

server
{
    listen        999 9999 ;
    server_name   example.com ;
    host            127.0.0.1 ;
    error_pages   404.html 405.html ;
    client_body_size  500000 ;
    root    stuff ;
    autoindex   on ;
    location /dir/
    {
        default_file  default.html ;
        methods GET DELETE ;
        cgi_extension   .py ;
        cgi_bin  /usr/bin/python3 ;
    }
    location /upload/
    {
        default_file  index1.html ;
        methods GET POST DELETE ;
        cgi_extension   .py ;
        cgi_bin  /usr/bin/python3 ;
    }
    location /test/
    {
        default_file  iNdex2.html ;
        methods  GET  POST DELETE ;
        cgi_bin  /usr/bin/python4 ;
        cgi_extension  .BRUH ;
        return 301 /dir/ ;
    }
    location /MAMA/
    {
        default_file  inDex3.html ;
        methods  GET  POST DELETE ;
        cgi_bin  /usr/bin/python4 ;
        cgi_extension  .ZOOT ;
    }
}
