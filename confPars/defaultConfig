server
{
    listen        8080 7070 ;
    server_name   example.com ;
    host            127.0.0.1 ;
    error_pages   404.html 405.html 403.html ;
    client_body_size  100 ;
    default_file    inde.html ;
    root    stuff ;
    autoindex   on ;
    location /
    {
        default_file  defaul.html ;
        methods GET ;
        cgi_extension   .py ;
        cgi_bin  /usr/local/bin/python3 ;
    }
    location /put_test/
    {
        default_file  index1.html ;
        methods POST ;
        cgi_extension   .bla ;
        cgi_bin  /cgi ;
    }
    location /directory/
    {
        default_file  iNdex2.html ;
        methods  GET  POST DELETE ;
        cgi_bin  /usr/local/bin/python3 ;
        cgi_extension  .BRUH ;
        return 301 /dir/ ;
    }
    location /kkk/
    {
        alias           cgi/te.py ;
        default_file    inDex3.html ;
        methods         GET  POST DELETE ;
        cgi_bin         /usr/local/bin/python3 ;
        cgi_extension   .ZOOT ;
    }
}
