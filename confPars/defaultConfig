server
{
    listen        8080 7070 ;
    server_name   example.com ;
    host            localhost ;
    error_pages  500.html 404.html 400.html 413.html 405.html 403.html ;
    client_body_size  1000000000 ;
    default_file    index.html ;
    root    stuff ;
    autoindex   off ;
    location /dir/
    {
        default_file  lal.html ;
        methods GET  POST DELETE ;
        cgi_extension   .py ;
        cgi_bin  /usr/local/bin/python3 ;
    }
    location /upload/
    {
        default_file  lal.html ;
        methods GET POST ;
        cgi_extension   .bla ;
        cgi_bin  /cgi ;
    }
    location /test/
    {
        default_file  iNdex2.html ;
        methods  GET  POST DELETE ;
        cgi_bin  /usr/local/bin/python3 ;
        cgi_extension  .BRUH ;
    }
    location /kkk/
    {
        alias           /dir/ ;
        default_file    inDex3.html ;
        methods         GET  POST DELETE ;
        cgi_bin         /usr/local/bin/python3 ;
        cgi_extension   .ZOOT ;
    }
}

server
{
    listen        7777 ;
    server_name   example.com ;
    host            localhost ;
    error_pages  500.html 404.html 40.html 413.html 405.html 403.html ;
    client_body_size  1000000000 ;
    default_file    index.html ;
    root    oxer-html ;
    autoindex   on ;
}